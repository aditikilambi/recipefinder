
<%if @to_search.nil? %>
	<h1>Enter a search term to begin your recipe search!<h1>
	<p>Try "?search=chocolate" in the URL</p>
<%elsif @find == 0%>
	<h1>No results found for that search. Try again. </h1>
<%else%>
	<h1>Seaching for: <%=  @to_search  %></h1>
	<table border="1">

	<tr>
		<th></th>
		<th>Recipe Result</th>
		<th>Social Rank</th>
	</tr>
		<% @find.each do |search| %>
			<tr>
				<td><%= link_to image_tag(search["image_url"], height: '100', width: '100'), search["f2f_url"] %></td>
				<td><%= link_to sanitize(search["title"]), search["f2f_url"] %></td>
				<td><%= search["social_rank"] %></td>
			</tr>
		<%end%>
	</table>
<%end%>
